@baseUrl = http://localhost:8000/api/v1

###

@sign_in_auth = {{sign_in.response.body.auth}}

# @name sign_in
POST {{baseUrl}}/auth/sign-in
Content-Type: application/json

{
  "email": "alimam@example.com",
  "password": "alimam@example.com"
}

###

@bucket_id = {{create_bucket.response.body.id}}

# @name create_bucket
POST {{baseUrl}}/buckets/
Content-Type: application/json
Cookie: auth={{sign_in_auth}}

{
  "name": "Test Bucket for Assets"
}

###

@created_asset_id = {{create_asset.response.body.id}}

# @name create_asset
POST {{baseUrl}}/buckets/{{bucket_id}}/assets/
Cookie: auth={{sign_in_auth}}
Content-Type: multipart/form-data; boundary=WebAppBoundary

--WebAppBoundary
Content-Disposition: form-data; name="file"; filename="test.txt"
Content-Type: text/plain

This is a test file for asset upload
--WebAppBoundary
Content-Disposition: form-data; name="keys"

tag1~tag2~category
--WebAppBoundary--

###

# @name get_assets_by_bucket
GET {{baseUrl}}/buckets/{{bucket_id}}/assets/?cursor=1&limit=10
Cookie: auth={{sign_in_auth}}

###

# @name get_asset_by_id
GET {{baseUrl}}/buckets/{{bucket_id}}/assets/{{created_asset_id}}
Cookie: auth={{sign_in_auth}}

###

# @name update_asset
PATCH {{baseUrl}}/buckets/{{bucket_id}}/assets/{{created_asset_id}}
Content-Type: application/json
Cookie: auth={{sign_in_auth}}

{
  "name": "updated-test-file.txt"
}

###

# @name download_asset
GET {{baseUrl}}/buckets/{{bucket_id}}/assets/{{created_asset_id}}/download
Cookie: auth={{sign_in_auth}}

###

# @name delete_asset
DELETE {{baseUrl}}/buckets/{{bucket_id}}/assets/{{created_asset_id}}
Cookie: auth={{sign_in_auth}}

###

# @name cleanup_bucket
DELETE {{baseUrl}}/buckets/{{bucket_id}}
Cookie: auth={{sign_in_auth}}
