generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(ulid())

  name     String
  email    String  @unique
  password String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Secret    Secret[]
  Bucket    Bucket[]

  @@map("users")
}

model Secret {
  id String @id @default(ulid())

  secret        String
  expiresAt     DateTime?
  validationUri String?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("secrets")
}

model Bucket {
  id String @id @default(ulid())

  name   String
  config String?
  userId String
  user   User    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Asset     Asset[]

  @@map("buckets")
}

model Asset {
  id String @id @default(ulid())

  name String
  size Int

  keys String?
  ref  String

  bucketId String
  bucket   Bucket @relation(fields: [bucketId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("assets")
}
